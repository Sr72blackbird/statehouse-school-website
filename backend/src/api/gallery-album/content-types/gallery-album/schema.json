{
  "kind": "collectionType",
  "collectionName": "gallery_albums",
  "info": {
    "singularName": "gallery-album",
    "pluralName": "gallery-albums",
    "displayName": "Gallery Album"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "blocks"
    },
    "cover_image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "event_date": {
      "type": "date"
    },
    "order": {
      "type": "integer"
    },
    "gallery_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::gallery-item.gallery-item",
      "mappedBy": "gallery_album"
    }
  }
}
